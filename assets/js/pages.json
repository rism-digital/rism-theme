---
layout: null
search_exclude: true
---
{% if site.enable-search %}
{% assign post_count = site.posts | size %}
{% assign counter = 0 %}
[
    {% for page in site.pages %}{% if page.search_exclude or page.url contains '.xml' or page.url contains 'assets' %}{% else %}{% if counter > 0 %},{% endif %}{
    "id": {{ counter }},
    "url": "{{ site.url }}{{ page.url }}",
    "title": "{{ page.title }}",
    "body": "{{ page.content | markdownify | replace: '\\', ' ' | replace: '	', ' ' | replace: '.', '. ' | replace: '</h1>', ': ' | replace: '</h2>', ': ' | replace: '</h3>', ': ' | replace: '</h4>', ': ' | replace: '</p>', ' ' | strip_html | strip_newlines | replace: '  ', ' ' | replace: '"', ' ' }}"{% assign counter = counter | plus: 1 %}
    }{% endif %}
    {% endfor %}
    {% for page in site.posts %}{% if counter > 0 %},{% endif %}{
    "id": {{ counter }},
    "url": "{{ site.url }}{{ page.url }}",
    "title": "{{ page.title }}",
    "body": "{{ page.date | date: "%Y/%m/%d" }} - {{ page.content | markdownify | replace: '\\', ' ' | replace: '	', ' ' | replace: '.', '. ' | replace: '</h1>', ': ' | replace: '</h2>', ': ' | replace: '</h3>', ': ' | replace: '</h4>', ': ' | replace: '</p>', ' ' | strip_html | strip_newlines | replace: '  ', ' ' | replace: '"', ' ' }}"{% assign counter = counter | plus: 1 %}
    }
    {% endfor %}
]
{% else %}
[]
{% endif %}